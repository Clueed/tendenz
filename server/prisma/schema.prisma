generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UsStockDaily {
  UsStocks       UsStocks @relation(fields: [ticker], references: [ticker])
  ticker         String
  date           DateTime
  volume         Float
  open           Float
  close          Float
  high           Float
  low            Float
  volumeWeighted Float?
  nTransactions  Int?
  marketCap      Float?
  sigma          Float?
  sigmaAbs       Float?
  logReturn      Float?

  @@id([ticker, date])
  @@index([marketCap], type: BTree)
  @@index(date(sort: Desc), type: BTree)
  @@index([sigmaAbs(sort: Desc)], type: BTree)
}

model UsStocks {
  ticker                      String         @id
  dailys                      UsStockDaily[]
  name                        String?
  active                      Boolean?
  cik                         Int?
  compositeFigi               String?
  currencyName                String?
  description                 String?
  locale                      String?
  market                      String?
  primaryExchange             String?
  shareClassFigi              String?
  sicCode                     Int?
  sicDescription              String?
  tickerRoot                  String?
  type                        String?
  sourceFeed                  String?
  weightedSharesOutstanding   Float?
  shareClassSharesOutstanding Float?
}

model SigmaUsStocksYesterday {
  ticker              String   @id
  name                String?
  sigma               Float
  absSigma            Float
  weight              Float
  marketCap           Float?
  stdLogReturn        Float
  meanLogReturn       Float
  sampleSize          Int
  lastClose           Float
  lastLogReturn       Float
  lastDate            DateTime
  secondLastClose     Float
  secondLastLogReturn Float
  secondLastDate      DateTime
}
