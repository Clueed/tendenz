{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "rootDir": "src/",
    "moduleResolution": "nodenext",
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.config.ts"]
}
